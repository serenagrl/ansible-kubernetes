apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: rabbitmq-client-cert
  namespace: "{{ rabbitmq.namespace }}"
spec:
  duration: {{ rabbitmq.cert.validity }}
  dnsNames:
    - {{ rabbitmq.name }}
  issuerRef:
    kind: ClusterIssuer
    name: {{ fact_cluster_issuer_name }}
  secretName: rabbitmq-client-tls