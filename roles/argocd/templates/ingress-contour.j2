apiVersion: projectcontour.io/v1
kind: HTTPProxy
metadata:
  name: argocd-server-httpproxy
  namespace: argocd
spec:
  virtualhost:
    fqdn: {{ domain }}
    tls:
      secretName: httpproxy-tls
  routes:
    - conditions:
        - prefix: /
      services:
        - name: argocd-server
          port: 443
          protocol: tls