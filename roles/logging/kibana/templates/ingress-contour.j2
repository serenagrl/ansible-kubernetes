apiVersion: projectcontour.io/v1
kind: HTTPProxy
metadata:
  name: {{ name }}
  namespace: {{ namespace }}
spec:
  routes:
    - conditions:
        - prefix: /kibana
      services:
        - name: kibana-kb-http
          port: 5601
          protocol: tls
      pathRewritePolicy:
        replacePrefix:
          - replacement: /