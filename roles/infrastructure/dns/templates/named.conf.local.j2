include "/etc/bind/rndc.key";

zone "{{ dns.zone }}" IN {
        type master;
        file "/var/lib/bind/forward.{{ dns.zone }}";
        allow-query { any; };
        allow-update {
            {{ ansible_host }};
            key rndc-key;
        };
};
zone "{{ _kube.cluster.address.split('.')[2::-1]|join('.') }}.in-addr.arpa" IN {
        type master;
        file "/var/lib/bind/reverse.{{ dns.zone }}";
        allow-update {
            {{ ansible_host }};
            key rndc-key;
        };
};