$TTL    604800
@       IN      SOA     {{ dns.zone }}. root.{{ dns.zone }}. (
                              1         ; Serial
                         604800         ; Refresh
                          86400         ; Retry
                        2419200         ; Expire
                         604800 )       ; Negative Cache TTL
;

; Name Server
@               IN      NS     {{ ansible_hostname }}.{{ dns.zone }}.
{{ ansible_hostname }}      IN      A      {{ ansible_host }}

; Reverse lookup for Name Server
{{ ansible_host.split('.')[3] }}       IN      PTR     {{ ansible_hostname }}.{{ dns.zone }}.