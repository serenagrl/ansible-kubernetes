apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: {{ name }}
  namespace: {{ namespace }}
spec:
  ingressClassName: {{ ingress_name }}
  rules:
    - host: {{ _kube.hostname }}
      http:
        paths:
          - path: /kiali
            pathType: Prefix
            backend:
              service:
                name: kiali
                port:
                  number: 20001
{% if has_issuer %}
  tls:
    - hosts:
        - {{ _kube.hostname }}
      secretName: nginx-tls
{% endif %}