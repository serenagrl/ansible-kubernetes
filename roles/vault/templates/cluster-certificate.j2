apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: vault-cluster-cert
  namespace: vault
spec:
  dnsNames:
    - {{ VAULT[vault.mode|upper].VAULT_DOMAIN }}
    - vault-0.vault-internal
    - vault-1.vault-internal
    - vault-2.vault-internal
  issuerRef:
    kind: ClusterIssuer
    name: {{ fact_cluster_issuer_name }}
  secretName: vault-cluster-tls