apiVersion: projectcontour.io/v1
kind: HTTPProxy
metadata:
  name: registry-httpproxy
  namespace: gitlab
spec:
  virtualhost:
    fqdn: registry.{{ domain }}
    tls:
      secretName: gitlab-ingress-tls
  routes:
    - conditions:
        - prefix: /
      services:
        - name: gitlab-registry
          port: 5000