apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: {{ minio_tenant.tenant_name }}-ingress-cert
  namespace: {{ minio_tenant.namespace }}
spec:
  dnsNames:
    - {{ minio_tenant.domain_name }}.{{ kube.cluster.domain }}
    - {{ minio_tenant.console_domain_name }}.{{ kube.cluster.domain }}
  issuerRef:
    kind: ClusterIssuer
    name: {{ fact_cluster_issuer_name }}
  secretName: {{ minio_tenant.tenant_name }}-ingress-tls