tenant:
  name: {{ in_tenant_name }}
  pools:
    - servers: {{ in_minio_tenant.pools.servers }}
      volumesPerServer: {{ in_minio_tenant.pools.volumes_per_server }}
      size: {{ in_minio_tenant.pools.size }}
{% if not _kube.allow_scheduling %}
      tolerations:
        - effect: NoSchedule
          key: node-role.kubernetes.io/control-plane
          operator: Exists
      nodeSelector:
        node-role.kubernetes.io/control-plane: ""
{% endif %}

  certificate:
    requestAutoCert: false

  buckets:
    - name: chunks
    - name: ruler
    - name: admin

ingress:
  api:
    enabled: false
    host: {{ in_domain_name }}.{{ _kube.cluster.domain }}
    path: /
    pathType: Prefix
  console:
    enabled: false
    host: {{ in_console_domain_name }}.{{ _kube.cluster.domain }}
    path: /
    pathType: Prefix