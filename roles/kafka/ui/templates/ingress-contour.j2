apiVersion: projectcontour.io/v1
kind: HTTPProxy
metadata:
  name: kafka-httpproxy
  namespace: {{ kafka.namespace }}
spec:
  virtualhost:
    fqdn: kafka.{{ _kube.cluster.domain }}
    tls:
      secretName: kafka-ingress-tls
  routes:
    - conditions:
        - prefix: /
      services:
        - name: kafka-ui
          port: 80