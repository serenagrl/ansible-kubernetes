apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
  - github.com/ansible/awx-operator/config/default?ref={{ operator_release }}
  - patch-job-tolerations.yaml

images:
  - name: quay.io/ansible/awx-operator
    newTag: {{ operator_release }}

{% if not kube.allow_scheduling %}
patches:
  - path: patch-tolerations.yaml
    target:
      kind: Deployment
      name: awx-operator-controller-manager
  - path: patch-job-tolerations.yaml
    target:
      kind: Job
      name: awx-migration-{{ awx_release }}
{% endif %}